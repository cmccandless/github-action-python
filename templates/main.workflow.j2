workflow "Example" {
  on = "push"
  resolves = [
    {% for version in versions -%}
    "Python {{ version }}",
    {% endfor -%}
    "Example using local action",
  ]
}
{% for version in versions %}
action "Python {{ version }}" {
  uses = "{{ repo }}/{{ version }}@master"
  args = "python -c 'print(\"Hello, World!\")'"
  {%- if version == '3.7' %}
  resolves = ["Local action"]
  {%- endif %}
}
{% endfor %}
action "Local action" {
  uses = "./3.7"
  needs = ["Python 3.7"]
  args = "python -c 'print(\"I am different\")'"
}
